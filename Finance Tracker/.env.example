# Finance Tracker - Environment Configuration
# Copy this file to .env and update values as needed

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=finance_tracker

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
# Generate secure keys using: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_here_must_be_at_least_32_characters_long
REFRESH_SECRET=your_refresh_secret_key_here_must_be_at_least_32_characters_long

# Service Ports
AUTH_SERVICE_PORT=3001
ACCOUNT_SERVICE_PORT=3002
ANALYTICS_SERVICE_PORT=3003
AUDIT_SERVICE_PORT=3004
BANKING_SERVICE_PORT=3005
BUDGET_SERVICE_PORT=3006
NOTIFICATION_SERVICE_PORT=3007
REPORTING_SERVICE_PORT=3008
TRANSACTION_SERVICE_PORT=3009
USER_SERVICE_PORT=3010
API_GATEWAY_PORT=5000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000

# Notification Service (SMTP / Twilio / Firebase)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY="your_firebase_private_key"

# User Service (Stripe)
STRIPE_SECRET_KEY=your_test_stripe_secret_key

# Banking Service (Plaid)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# Auth Service (Google OAuth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
