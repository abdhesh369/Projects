{
    "name": "finance-tracker",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "backend/*",
        "frontend/*"
    ],
    "scripts": {
        "dev": "npm run dev --workspaces --if-present",
        "start": "npm run start --workspaces --if-present",
        "build": "npm run build --workspaces --if-present",
        "test": "jest",
        "clean": "rm -rf node_modules backend/*/node_modules frontend/*/node_modules *.log *.txt coverage .next out dist build"
    },
    "devDependencies": {
        "jest": "^30.2.0",
        "supertest": "^7.2.2"
    }
}